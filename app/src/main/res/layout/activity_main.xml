<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:text="ON/OFF"
        android:id="@+id/btnONOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Discover"
        android:id="@+id/btnFindUnpairdDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn_Discover"/>

    <Button
        android:text="Start Connection"
        android:id="@+id/btnStartConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/lvNewDevices"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btnSend2"
        android:text="Send Command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Incoming Message..."
        android:id="@+id/incomingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_OneDimension"
        android:text="One Dimension Data Sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Two Dimension/Small Range Sample"
        android:id="@+id/btnSearchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>